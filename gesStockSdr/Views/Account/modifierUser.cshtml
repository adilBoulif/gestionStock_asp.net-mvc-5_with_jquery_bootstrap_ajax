@model gesStockSdr.Models.ModifUserViewModel

@{
    ViewBag.Title = "modifierUser";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>  <i class="fas  fa-user"> </i> Modifier un Utilisateur</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="col-md-2 control-label"><i class="fas  fa-user"> </i> Utilisateur</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label"> <i class="fas fa-lock"></i> Password</label>
        <div class="col-md-10">
            <input type="password" id="password" name="password" class="form-control" />

            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <label class="col-md-2 control-label"> <i class="fas  fa-key"> </i> Role</label>
            <div class="col-md-10">

                <select id="role" name="role" class="form-control">

                    <option value="admin" @if (Model.role.Equals("admin")) { <text> selected </text> }>admin</option>
                    <option value="normal" @if (Model.role.Equals("normal")) { <text> selected </text> }>normal</option>

                </select>

                @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


