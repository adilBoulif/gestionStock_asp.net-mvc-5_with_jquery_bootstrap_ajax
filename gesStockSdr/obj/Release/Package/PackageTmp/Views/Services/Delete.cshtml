@model gesStockSdr.Models.Service

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<h3>vous voulez vraiment supprimer cet element?</h3>
<div>
 
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <i class="fas fa-id-badge"></i>   @Html.DisplayNameFor(model => model.nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom)
